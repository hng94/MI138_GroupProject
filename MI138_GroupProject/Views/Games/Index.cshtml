@model IEnumerable<MI138_GroupProject.Models.Game>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<div class="row">
    @foreach (var item in Model.Where(g => g.Published == true))
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@Html.DisplayFor(modelItem => item.ScreenshotUrl)" alt="..." style="height: 200px; width: 100%; display: block;">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                    <p>
                        @Html.DisplayFor(modelItem => item.Created)
                    </p>
                    <p>
                        <a href="@Url.Action("Details", "Games", new { id = item.ID })" class="btn btn-primary" role="button">Details</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>
